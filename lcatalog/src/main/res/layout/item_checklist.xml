<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_3">

    <RelativeLayout
        android:id="@+id/check_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/check_item_image_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/iron"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/check_item_image"
                        android:layout_width="@dimen/margin_100"
                        android:layout_height="@dimen/margin_100"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_12"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/check_item_name_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_3">

                        <TextView
                            android:id="@+id/check_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/overlock_sc"
                            android:text="@string/article_title_text"
                            android:textAllCaps="true"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/check_item_price_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_3"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/article_price_tag_symbol"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/check_item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/article_original_price"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/article_price_tag"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_3"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="Quantity : 1"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/text_size_medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_item_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_darker"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/margin_3"
                android:paddingStart="@dimen/margin_3">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/remove_button"
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:src="@mipmap/ic_delete" />

                <TextView
                    android:id="@+id/check_item_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_3"
                    android:fontFamily="@font/overlock_sc"
                    android:text="@string/btn_remove"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>